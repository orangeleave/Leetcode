public class Solution {
    public String reverseString(String s) {
        char[] str = s.toCharArray();
        int i = 0;
        int j = str.length - 1;
        while (i < j) {
            char temp = str[i];
            str[i] = str[j];
            str[j] = temp;
            i ++;
            j --;
        }
        StringBuffer res = new StringBuffer();
        for (char k: str)    res.append(k);
        return res.toString();
    }
}
